<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.casadocodigo.livrojogoshtml2.navemobile2" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Accelerometer">
        <param name="android-package" value="org.apache.cordova.devicemotion.AccelListener" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Media">
        <param name="android-package" value="org.apache.cordova.media.AudioHandler" />
    </feature>
    <name>Jogo de Nave com Acelerômetro</name>
    <description>
        Jogo de nave do primeiro livro, controlável pelo acelerômetro
    </description>
    <author email="ederson_cassio@yahoo.com.br" href="http://gamecursos.com.br">
        Éderson Cássio
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="Orientation" value="portrait" />
    <icon src="www/img/icone.png" />
</widget>
